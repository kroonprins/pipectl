  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "node",
      "request": "launch",
      "args": [
        "${workspaceRoot}/src/index.ts",
        "apply",
        "-f",
        "helmfile/result.yaml",
        "--dry-run",
        "--log-level",
        "debug"
      ],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "env": {
        "AZCONFIG": "./config/config.yaml"
      }
    },
    {
      "name": "Test",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/src/index.ts", "test", "--log-level", "debug"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "env": {
        "AZCONFIG": "./config/config.yaml"
      }
    }
  ]
}
